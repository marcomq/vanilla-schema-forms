{
  "name": "vanilla-schema-forms",
  "version": "0.1.0",
  "description": "A JSON schema driven form generator for vanilla JS/TS applications.",
  "type": "module",
  "main": "./dist/vanilla-schema-forms.umd.js",
  "module": "./dist/vanilla-schema-forms.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vanilla-schema-forms.es.js",
      "require": "./dist/vanilla-schema-forms.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "prebuild": "tsc --noEmit",
    "build": "vite build --config vite.lib.config.ts && cp dist/vanilla-schema-forms.umd.js example/vanilla-schema-forms.umd.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "playground": "vite --open playground/",
    "build:pages": "vite build example/playground --outDir ../../dist-pages/playground",
    "test:watch": "concurrently \"npm:test -- --watch\" \"npx nodemon --watch src --watch playwright-tests -e ts,html,json --exec 'npm run test:e2e'\""
  },
  "peerDependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.0"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^15.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcomq/vanilla-schema-forms.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcomq/vanilla-schema-forms/issues"
  },
  "homepage": "https://github.com/marcomq/vanilla-schema-forms#readme",
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/node": "^25.0.10",
    "concurrently": "^8.2.2",
    "happy-dom": "^20.3.9",
    "json-schema-to-ts": "^3.1.1",
    "nodemon": "^3.1.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-node-polyfills": "^0.25.0",
    "vitest": "^4.0.18"
  }
}